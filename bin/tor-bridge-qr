import argparse
import json
import qrcode
import sys


def qr(data, path):
    qr = qrcode.QRCode()
    qr.add_data(data)
    if path is not None:
        image = qr.make_image()
        with open(path, 'wb') as f:
            image.save(f)
    elif sys.stdout.isatty():
        qr.print_tty()
    else:
        qr.print_ascii()


def generate(address, key, path=None):
    data = {
        'domain': address,
        'auth_cookie_value': key
    }
    qr(json.dumps(data), path)


def parse_args():
    parser = argparse.ArgumentParser(description='generate QR code from a Tor HidServAuth entry')
    parser.add_argument('address')
    parser.add_argument('key')
    parser.add_argument('--save-image', '-i')
    return parser.parse_args()


if __name__ == "__main__":
    args = parse_args()
    generate(args.address, args.key, args.save_image)
