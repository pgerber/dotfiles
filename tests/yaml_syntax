#!/usr/bin/python3
import glob
import textwrap
import yaml

yaml_files = glob.glob('**/*.yml', recursive=True)

err = False
for file in yaml_files:
    with open(file) as f:
        try:
            yaml.safe_load(f)
        except yaml.error.YAMLError as e:
            print('ERROR:')
            print('  file: {!r}'.format(file))
            print('  error:')
            print(textwrap.indent(str(e), '     | '))
            print()
            err = True

if err:
    exit(1)
